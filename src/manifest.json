{
	"name": "ThisIsTest",
	"description": "ThisIsTest is a tools that avoid mistakes",
	"version": "1.0",
	"permissions": [
		"tabs",
		"storage",
		"unlimitedStorage"
	],
    "manifest_version": 2,
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "/assets/img/begemot_96x96.jpg"
	},
	"background": {
		"scripts": ["assets/js/background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			 "matches": ["http://*/", "https://*/"],
			 "js": ["assets/js/content.js"]
		}
   ]

}